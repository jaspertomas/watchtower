<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>    
  </div>
<% else %>
	<div class="center hero-unit">
	<%= image_tag("watchtower_wide.png", { :style => "height:150px"}) %>
	  <h1>WATCHTOWER</h1>
	  <h2>
		Let's create Heaven on Earth, one project at a time
	  </h2>
	
	  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
